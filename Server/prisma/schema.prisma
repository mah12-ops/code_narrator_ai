generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
 
}

model User {
  id               Int      @id @default(autoincrement())
  name             String
  profileImage     String? 
  email            String   @unique
  password         String
  resetToken       String?  // optional, for password reset
  resetTokenExpiry DateTime? // optional, expiry for the token
  createdAt        DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

}



model Explanation {
  id        Int      @id @default(autoincrement())
  code      String
  language  String
  result    String
  createdAt DateTime @default(now())
}